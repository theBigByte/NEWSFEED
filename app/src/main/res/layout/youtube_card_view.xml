<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/youCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="0dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeYoutuber"
            android:layout_marginEnd="80dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/sourceTextYoutube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Source"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/youtubeFloatingbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeYoutuber"
            android:layout_marginEnd="@dimen/yFltBtnMarEnd"
            android:layout_marginRight="@dimen/yFltBtnMarRight"
            android:layout_marginTop="@dimen/yFltBtnMarTop"
            android:adjustViewBounds="true"
            android:clickable="true"
            app:backgroundTint="@color/fabY"
            card_view:fabSize="mini"
            card_view:srcCompat="?attr/actionModeShareDrawable" />

        <RelativeLayout
            android:id="@+id/relativeYoutuber"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/playBtn"
                android:layout_width="@dimen/youtubeBtnWidth"
                android:layout_height="@dimen/youtubeBtnHeight"
                android:layout_alignBottom="@+id/youtuber"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/yPlayBtnMarBottom"
                android:alpha="0.9"
                android:background="@drawable/youtubee" />

            <com.google.android.youtube.player.YouTubeThumbnailView
                android:id="@+id/youtuber"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:visibility="visible" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>




